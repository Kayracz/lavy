<div class="showimage" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.3) 0%, rgba(0,0,0,0.2) 50%), url('https://www.theunion.com/wp-content/uploads/2016/10/MYMLaundromat-GVU-121613-6-5.jpg');">

  <!-- map -->

  <!--options-->

  <h1 class="text-center">Schedule a Pick Up </h1>

  <div class="container">
    <div class="row">
      <!-- FIRST ELEMENT -->
      <div class="col-xs-12 col-sm-12 col-md-4 process-card">
        <h2>Choose the date of your pickup</h2>
      </div>
      <!-- SECOND ELEMENT -->
      <div class="col-xs-12 col-sm-12 col-md-4 process-card">
        <h2>Time slot</h2>

        <div class="btn-group btn-group-toggle" data-toggle="buttons">
          <label class="btn btn-secondary active">
            <input type="9:00 - 10:00" name="options" id="option1" autocomplete="off" checked=""> Active
          </label>
          <label class="btn btn-secondary">
            <input type="11:00 - 12:00" name="options" id="option2" autocomplete="off">Time
          </label>
        </div>


      </div>
      <!-- THIRD ELEMENT -->
      <div class="col-xs-12 col-sm-12 col-md-4 process-card">
        <h2>Services</h2>

        <div class="btn-group btn-group-lg" role="group" aria-label="Basic example">
          <button type="button" class="btn btn-secondary">Left</button>
          <button type="button" class="btn btn-secondary">Middle</button>
          <button type="button" class="btn btn-secondary">Right</button>
        </div>

      </div>
      <!-- FOURTH ELEMENT -->
      <div class="col-xs-12 col-sm-12 col-md-4 process-card">
        <h2>Choose a delivery date</h2>
      </div>
      <!-- FIFTH ELEMENT -->
      <div class="col-xs-12 col-sm-12 col-md-4 process-card">
        <h2>Time slots</h2>
      </div>
      <!-- SIXTH ELEMENT -->
      <div class="col-xs-12 col-sm-12 col-md-4 process-card">
        <h2>Bags</h2>
      </div>
    </div>
  </div>

<button type="button" class="btn btn-secondary">Continue</button>

</div>
