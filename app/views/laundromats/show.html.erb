<h1>Laundromats#show</h1>
<% @laundromat.name %>

<div class="container-fluid">
  <div class="row">
    <!-- CARDS -->
    <div class="col-xs-12 col-sm-7" style="padding-left: 0; padding-right: 0;">
    </div>
  </div>

  <div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
</div>
<div id="live-chat" class="live-chat-transition">

  <div id="chat-label" class="live-chat-transition">

    <h4 class="live-chat-galaxie live-chat-transition">

      Live Chat

      <img src="https://fgl.scene7.com/is/image/FGLSportsLtd/live-chat-up-arrow-icon?wid=15&fmt=png-alpha&op_sharpen=1&resMode=sharp2" alt="live-chat-up-arrow" class="live-chat-arrow live-chat-transition live-chat-up-arrow" />

      <img src="https://fgl.scene7.com/is/image/FGLSportsLtd/live-chat-down-arrow-icon?wid=15&fmt=png-alpha&resMode=sharp2" alt="live-chat-down-arrow" class="live-chat-arrow live-chat-transition live-chat-down-arrow" />

    </h4>
  </div>

  <p><strong>Need help?</strong><br>Connect with our LeBateau staff and have your questions answered!</p>

  <a href="#" id="chat-button" class="live-chat-galaxie">Chat Now</a>
</div>
