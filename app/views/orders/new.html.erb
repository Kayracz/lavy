<!-- Navbar -->


<h1 class="text-center datepicker-title">Schedule A Pick Up</h1>


<div class="container">
  <div class="row">
    <%= simple_form_for [@laundromat, @order] do |f| %>

    <div class="col-xs-12">
      <div class="addresspicker">
        <h2>Choose an address for your pickup</h2>
        <%= f.input :pick_up_address, label: false %>
      </div>
    </div>

      <!-- FIRST ELEMENT DATE -->
      <div class="col-xs-12 col-md-6">
        <div class="datepicker-holder">
          <h2>Choose the date of your pickup</h2>
          <%= f.input :pick_up_time, as: :string, label: false, input_html: {class: "datepicker datechoose", placeholder: "?"} %>
        </div>


        <!-- FIRST ELEMENT TIME -->
        <div class="datepicker-holder">
          <h2>Pick up time</h2>
          <div class="btn-group btn-group-toggle datepicker-options" data-toggle="buttons">
            <input type="hidden" name="order[pick_up_time_hs]" value="9:00" />

            <label class="btn btn-secondary active" for="order_pick_up_time_hs_first">
              <input type="radio" value="9:00" name="order[pick_up_time_hs]" id="order_pick_up_time_hs_first"> 9:00
            </label>

            <label class="btn btn-secondary" for="order_pick_up_time_hs_second">
              <input type="radio" value="10:00" name="order[pick_up_time_hs]" id="order_pick_up_time_hs_second" > 10:00
            </label>

            <label class="btn btn-secondary" for="order_pick_up_time_hs_third">
              <input type="radio" value="11:00" name="order[pick_up_time_hs]" id="order_pick_up_time_hs_third" > 11:00
            </label>
          </div>
        </div>
      </div>

    <div class="col-xs-12">
      <div class="addresspicker">
        <h2>Choose an address for your pickup</h2>
        <%= f.input :delivery_address, label: false %>
      </div>
    </div>

      <!-- SECOND ELEMENT DATE -->
      <div class="col-xs-12 col-md-6">
        <div class="datepicker-holder">
          <h2>Choose the delivery date</h2>
          <%= f.input :delivery_time, as: :string, label: false, input_html: {class: "datepicker datechoose", placeholder: "?"} %>
        </div>

        <!-- SECOND ELEMENT TIME -->
        <div class="datepicker-holder">
          <h2>Delivery time</h2>
          <div class="btn-group btn-group-toggle datepicker-options" data-toggle="buttons">
            <input type="hidden" name="order[delivery_time_hs]" value="9:00" />
            <label class="btn btn-secondary active" for="delivery_time_hs_first">
              <input type="radio" value="9:00" name="order[delivery_time_hs]" id="delivery_time_first"> 9:00
            </label>
            <label class="btn btn-secondary" for="delivery_time_hs_second">
              <input type="radio" value="10:00" name="order[delivery_time_hs]" id="delivery_time_second" > 10:00
            </label>
            <label class="btn btn-secondary" for="delivery_time_hs_third">
              <input type="radio" value="11:00" name="order[delivery_time_hs]" id="delivery_time_third" > 11:00
            </label>
          </div>
        </div>
      </div>

      <!-- THIRD ELEMENT -->
      <div class="col-xs-12 col-md-6">
        <div class="service-holder">
          <h2>Services</h2>
          <div class="btn-group btn-group-toggle services-options" data-toggle="buttons">
            <input type="hidden" name="order[service_type][]" value="" />
            <label class="btn btn-secondary service-icons" for="order_service_type_true">
              <input type="checkbox" value="WashFold" name="order[service_type][]" id="order_service_type_washfold" >
              <p><i class="fab fa-500px"></i>Wash & Fold</p>
            </label>
            <label class="btn btn-secondary service-icons" for="order_service_type_drycleaning">
              <input type="checkbox" value="DryCleaning" name="order[service_type][]" id="order_service_type_drycleaning" >
              <p><i class="fab fa-500px"></i> Dry Cleaning</p>
            </label>
            <label class="btn btn-secondary service-icons" for="order_service_type_hangdry">
              <input  type="checkbox" value="HandDry" name="order[service_type][]" id="order_service_type_hangdry" >
              <p><i class="fab fa-500px"></i>Hang & Dry</p>
            </label>
          </div>
        </div>
      </div>

      <!-- FOURTH ELEMENT -->
      <div class="col-xs-12 col-md-6">
        <div class="bag-holder">
          <h2>Bags</h2>
          <div>
            <select name="order[number_of_bags]" id="order_number_of_bags" class="custom-select bag-title bag-choose">
              <option value="1">&#160;&#160;&#160;&#160;&#160;&#160;1</option>
              <option value="2">&#160;&#160;&#160;&#160;&#160;&#160;2</option>
              <option value="3">&#160;&#160;&#160;&#160;&#160;&#160;3</option>
              <option value="3">&#160;&#160;&#160;&#160;&#160;&#160;4</option>
              <option value="3">&#160;&#160;&#160;&#160;&#160;&#160;5</option>
            </select>
          </div>
        </div>
      </div>
      <div class="col-xs-12 submit-holder">
        <div class="button submit-order">
          <%= f.submit "Continue", class:"btn btn-primary btn-lg" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
